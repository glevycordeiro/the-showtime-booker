<div class="details-container">
  <div class="movie-container">
    <%= image_tag @movie.poster, alt: "movie poster", width: 400 %>
    <div class="movie-info">
      <div class="movie-title"><p style="font-weight: bold"><%= @movie.title %></p></div>
      <div class="general-info">
        <p><strong> Age Limit: </strong> M/<%= @movie.age_limit %></p>
        <p><strong> Genre:</strong> <%= @movie.genre.capitalize %></p>
        <p><strong> Duration (minutes): </strong><%= @movie.duration %></p>
      </div>
      <p><%= @movie.synopsis %></p>
    </div>




    <div class="schedule">
      <%= render 'shared/schedule' %>
    </div>

  </div>


</div>
